<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      * {
        padding: 0;
        margin: 0;
      }
      .Container {
        background-color: #eee;
        width: 100%;
        height: 100vh;
      }

      .ContainerCertificado {
        width: 100%;
        background-image: url(https://dmanisio.sirv.com/Images/preserve-fundo.jpg);
        height: 100%;
        background-repeat: no-repeat;
        background-position-x: center;
      }

      .ContainerCertificado h1,
      p {
        text-align: center;
      }

      .ContainerCertificado h1 {
        font-size: 55px;
        padding-top: 120px;
        font-family: Arial, Helvetica, sans-serif;
      }

      .ContainerCertificado p {
        font-family: "Calibri";
        font-size: 20px;
      }

      .Padding {
        margin-top: 30px;
      }

      .Div1 {
        width: 80%;
        text-align: left;
        margin: auto;
        padding-top: 15px;
      }

      .ContainerCertificado div p {
        text-align: left;
        font-size: 28px;
      }

      .ContainerCertificado div p span {
        border-bottom: 2px solid black;
      }

      .Margin {
        margin-top: 20px;
      }

      .InstrutorAluno {
        margin: auto;
        width: 80%;
        padding-top: 170px;
        height: 120px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .InstrutorAluno strong {
        font-family: "Calibri";
        font-weight: bold;
        font-size: 20px;
        display: flex;
        justify-content: center;
        border-top: 1px solid black;
        padding-top: 3px;
        width: 250px;
      }

      .InstrutorAluno h4 {
        font-family: "Calibri";
        font-size: 18px;
        font-weight: lighter;
        padding: 2px;
        display: flex;
        justify-content: center;
        padding-top: 3px;
      }
    </style>
  </head>
  <body>
    <div class="Container">
      <% Data.forEach(function(element, index) { %>
      <div class="ContainerCertificado">
        <h1>CERTIFICADO</h1>
        <p class="Padding">
          CPF: <%= element.CPF.replace(/^(\d{3})(\d{3})(\d{3})(\d{2})$/,
          "$1.$2.$3-$4") %>
        </p>
        <div class="Div1">
          <p class="Margin">
            Certificamos que <span><%= element.NOME.toUpperCase() %></span> <%=
            jsonData[0].TEXTO %>
          </p>
        </div>
        <p class="Margin">Empresa: <%= element.EMPRESA %></p>
        <p class="Margin"><%= element.LOCALIZACAO %></p>
        <div class="InstrutorAluno">
          <div>
            <strong
              ><%= element.NOME.replace(/\b\w/g, (match) => match.toUpperCase())
              %></strong
            >
            <h4>Aluno / Participante</h4>
          </div>
          <div>
            <strong>Fulano Fula da Silva</strong>
            <h4>Instrutor / Tec. Seg. Trabalho</h4>
            <h4>MTE 1111-ES / CPF: 000.000.000-00</h4>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
